<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.jiban.creativelearning">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_fish_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CreativeLearning"
        android:usesCleartextTraffic="true">

        <activity
            android:name="com.jiban.creativelearning.x.splash.FishActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CreativeLearning"
            tools:ignore="MissingClass">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.jiban.creativelearning.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CreativeLearning">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>